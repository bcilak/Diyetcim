@{
}
<div class="bg-success text-white col-sm-5 p-4">
    Mesaj oluşturun
</div>
<br />
<form asp-action="AddRequest" method="post" class="m-5">
    <label for="name">Adınız:</label><br>

    <input class="form-control" asp-for="Name" /><br>

    <label for="email">E-posta Adresiniz:</label><br>

    <input type="email" id="email" name="email" asp-for="Email"><br>

    <label for="subject">Konu:</label><br>

    <input type="text" id="subject" name="subject" asp-for="Subject"><br>

    <label for="message">Mesajınız:</label><br>

    <textarea id="message" name="message" rows="5" cols="50"></textarea><br>

    <input type="submit" class="btn btn-success" value="Gönder">
</form>