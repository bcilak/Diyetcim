@model BitirmeDeneme.Models.Doktor;
@{
}
<!-- Diyetisyen Kaydı -->
<form action="KayitDoktor" method="post">
    <div id="dietitianRegistration" class="d-none">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card p-4">
                        <div class="card-body">
                            <h4 class="card-title text-center mb-4">Diyetisyen Kaydı</h4>

                            <div class="form-group">
                                <label for="name">Adınız</label>
                                <input class="form-control" type="text" name="isim" asp-for="isim" placeholder="Adınızı girin">
                            </div>
                            <div class="form-group">
                                <label for="soyisim">Soyadınız</label>
                                <input class="form-control" type="text" name="soyisim" asp-for="soyisim" placeholder="Soyadınızı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="email">E-posta</label>
                                <input class="form-control" type="email" name="Email" asp-for="Email" placeholder="E-posta adresinizi girin">
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input class="form-control" type="password" name="sifre" asp-for="sifre" placeholder="Şifrenizi girin">
                            </div>
                            <div class="form-group">
                                <label for="passwordConfirmation">Şifre Onayı</label>
                                <input class="form-control" type="password" name="sifre" asp-for="sifre" placeholder="Şifrenizi tekrar girin">
                            </div>
                            <div class="form-group">
                                <label for="degree">Ünvanınız</label>
                                <input class="form-control" type="text" name="unvan" asp-for="unvan" placeholder="Ünvanınızı girin">
                            </div>
                            <div class="form-group">
                                <label for="specialty">Cinsiyet</label>
                                <input class="form-control" type="text" name="cinsiyet" asp-for="cinsiyet" placeholder="Cinsiyet giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Kaydol</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
