<form action="KayitDanisan" method="post">
    <div id="patientRegistration" class="d-none">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card p-4">
                        <div class="card-body">
                            <h4 class="card-title text-center mb-4">Danışan Kaydı</h4>
                            <form>
                                <div class="form-group">
                                    <label for="name">Adınız</label>
                                    <input type="text" class="form-control" id="name" placeholder="Adınızı girin">
                                </div>
                                <div class="form-group">
                                    <label for="name">Adınız</label>
                                    <input type="text" class="form-control" id="surname" placeholder="Soyadınızı girin">
                                </div>
                                <div class="form-group">
                                    <label for="email">E-posta</label>
                                    <input type="email" class="form-control" id="email"
                                           placeholder="E-posta adresinizi girin">
                                </div>
                                <div class="form-group">
                                    <label for="password">Şifre</label>
                                    <input type="password" class="form-control" id="password"
                                           placeholder="Şifrenizi girin">
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-block">Kaydol</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

